---
import Layout from '../layouts/Layout.astro';
import AuthForm from '../components/auth/AuthForm';
import { Toaster } from 'react-hot-toast';
---

<Layout title="Login">
  <main class="min-h-screen flex items-center justify-center px-4">
    <div class="max-w-md w-full bg-white dark:bg-gray-800 p-8 rounded-lg shadow-md">
      <h1 class="text-2xl font-bold text-center mb-6">Login to VizAI</h1>
      <AuthForm type="login" client:load />
      <p class="mt-4 text-center text-sm">
        Don't have an account?
        <a href="/signup" class="text-primary hover:underline">Sign up</a>
      </p>
    </div>
  </main>
</Layout>