---
import Layout from '../layouts/Layout.astro';
import { Image } from 'astro:assets';
---

<Layout title="Welcome">
  <main class="pt-20">
    <!-- Hero Section -->
    <section class="container mx-auto px-4 py-20">
      <div class="text-center">
        <h1 class="text-5xl font-bold mb-6">
          Transform Your Data into
          <span class="text-primary">Actionable Insights</span>
        </h1>
        <p class="text-xl text-gray-600 dark:text-gray-400 mb-8 max-w-2xl mx-auto">
          VizAI combines powerful data visualization with AI-driven analytics to help you make better decisions.
        </p>
        <div class="flex justify-center gap-4">
          <a href="/signup" class="btn-primary">Get Started</a>
          <a href="/login" class="btn-secondary">Login</a>
        </div>
      </div>
    </section>

    <!-- Features Section -->
    <section class="bg-gray-50 dark:bg-gray-800 py-20">
      <div class="container mx-auto px-4">
        <h2 class="text-3xl font-bold text-center mb-12">Why Choose VizAI?</h2>
        <div class="grid md:grid-cols-3 gap-8">
          <div class="bg-white dark:bg-gray-900 p-6 rounded-lg shadow-md">
            <h3 class="text-xl font-semibold mb-4">Smart Visualizations</h3>
            <p class="text-gray-600 dark:text-gray-400">
              Create stunning visualizations with our intuitive interface and AI-powered suggestions.
            </p>
          </div>
          <div class="bg-white dark:bg-gray-900 p-6 rounded-lg shadow-md">
            <h3 class="text-xl font-semibold mb-4">AI Insights</h3>
            <p class="text-gray-600 dark:text-gray-400">
              Get automated insights and patterns from your data using advanced AI algorithms.
            </p>
          </div>
          <div class="bg-white dark:bg-gray-900 p-6 rounded-lg shadow-md">
            <h3 class="text-xl font-semibold mb-4">Real-time Analytics</h3>
            <p class="text-gray-600 dark:text-gray-400">
              Monitor your data in real-time with interactive dashboards and alerts.
            </p>
          </div>
        </div>
      </div>
    </section>
  </main>
</Layout>